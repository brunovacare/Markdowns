@inherits CrudMFBase

<h1>Users - Micro frontend</h1>
<p>This component demonstrates fetching Users from a MySQL Table using Micro frontend approach </p>

@if (users == null) {
    <p>
        <em>Loading...</em>
    </p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Creation Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eUser in users) {
                <tr>
                    <td>@eUser.Name</td>
                    <td>@eUser.Email</td>
                    <td>@eUser.Address</td>
                    <td>@eUser.CreationDateUTC.Date.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
